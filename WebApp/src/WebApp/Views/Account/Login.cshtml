@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Account/LoginLayout.cshtml";
}

<div id="login-frame">
    <div class="login-outer-holder">
        <a href="/" title="Dashboard" class="logo"><img src="../Images/logo-blue.png" alt="Lanner"></a>
        <div class="login-inner-holder">
            <section>
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div class="login-panel">
                        <div class="email">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" type="text" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <!-- label for="txtEmailAddress">Email Address</label>
                            <input name="txtEmailAddress" type="text" maxlength="240" id="txtEmailAddress">
                                -->
                        </div>
                        <div class="password">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>

                            <!-- <label>Password</label>
                            <input name="txtPassword" type="password" maxlength="60" id="txtPassword">-->
                            
                        </div>
                        <div class="remember">
                            <input id="RememberMe" type="checkbox" name="RememberMe">
                            <label for="RememberMe">Remember me on this computer</label>
                        </div>
                        <button type="submit" class="sign-in-btn login-button">Sign In</button>
                        <a asp-action="ForgotPassword" class="forgot">Forgot your password?</a>
                        <!-- <a href="javascript:void(0);" class="sign-in-btn login-button">Sign In</a>-->                        
                        <!-- <a href="javascript:void(0);" class="forgot">Forgot your password?</a>-->
                    </div>
                    <!--
                    <div class="forgotten">
                        <p class="info">Please enter your email address to reset your password for your account.</p>
                        <label>Email Address</label>
                        <input name="txtForgotten" type="text" maxlength="240" id="txtForgotten" class="required" data-validate-name="Email Address">
                        <a href="javascript:void(0);" class="reset">Reset</a>
                        <a href="javascript:void(0)" class="back forgot">Back to sign in</a>
                    </div>-->
                </form>
            </section>
        </div>
    </div>
</div>

